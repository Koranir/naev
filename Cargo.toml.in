[package]
name = @NAME@
version = @VERSION@
edition = "2021"
rust-version = "1.80" # LazyLock

[lib]
path = @PATH@

[dependencies]
naevc = { path=@NAEVC@ }
roxmltree = "0.20.0"
formatx = "0.2.2"
semver = "1"
sdl2 = "0.37.0"
rand = "0"
# We support lua51 / luajit and they are ABI compatible, so just point at luajit
mlua = { version = "0", features = ["luajit", "send"] }

[target.'cfg(unix)'.dependencies]
nix = { version="0.29.0", features=["signal"] }
